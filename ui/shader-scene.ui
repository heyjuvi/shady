<?xml version="1.0" encoding="UTF-8" ?>
<interface>
	<template class="ShadyShaderScene" parent="GtkBox">
		<property name="visible">True</property>
		<property name="can_focus">False</property>
		<property name="orientation">vertical</property>
		<property name="spacing">0</property>

	  <style>
      <class name="scene" />
    </style>

		<child>
		  <object class="GtkBox">
		    <property name="visible">True</property>
        <property name="can_focus">True</property>
		    <property name="orientation">vertical</property>
		    <property name="spacing">0</property>
		    <property name="width_request">240</property>
	      <property name="height_request">135</property>

		    <style>
          <class name="main_shader_box" />
        </style>

		    <child>
		      <object class="GtkBox" id="main_shader_container">
		        <property name="visible">True</property>
            <property name="can_focus">True</property>
		        <property name="orientation">vertical</property>
		        <property name="spacing">0</property>
		      </object>
		      <packing>
				    <property name="expand">False</property>
				    <property name="fill">True</property>
				    <property name="position">0</property>
			    </packing>
		    </child>

		    <child>
		      <object class="GtkBox">
		        <property name="visible">True</property>
            <property name="can_focus">True</property>
		        <property name="orientation">horizontal</property>
		        <property name="spacing">0</property>

		        <style>
              <class name="main_shader_controls" />
            </style>

		        <child>
					    <object class="GtkLabel" id="fps_label">
						    <property name="visible">True</property>
						    <property name="can_focus">True</property>
						    <property name="receives_default">False</property>
						    <property name="valign">center</property>

						    <style>
							    <class name="fps_label" />
						      <class name="highlighted" />
						    </style>

						    <attributes>
							    <attribute name="font-desc" value="Monospace 9" />
						    </attributes>
					    </object>
					    <packing>
						    <property name="expand">False</property>
				        <property name="fill">False</property>
				        <property name="position">0</property>
					      <property name="pack-type">start</property>
					    </packing>
				    </child>

				    <child>
					    <object class="GtkLabel" id="time_label">
						    <property name="visible">True</property>
						    <property name="can_focus">True</property>
						    <property name="receives_default">False</property>
						    <property name="valign">center</property>

						    <style>
							    <class name="highlighted" />
						    </style>

						    <attributes>
							    <attribute name="font-desc" value="Monospace 9" />
						    </attributes>
					    </object>
					    <packing>
						    <property name="expand">False</property>
				        <property name="fill">False</property>
				        <property name="position">1</property>
					      <property name="pack-type">start</property>
					    </packing>
				    </child>

		        <child>
							<object class="GtkButton" id="fullscreen_button">
								<property name="visible">True</property>
								<property name="can_focus">False</property>
								<property name="width_request">32</property>

								<signal name="clicked" handler="fullscreen_button_clicked" />

								<style>
									<class name="flat" />
									<class name="image-button" />
									<class name="no_padding" />
									<class name="fullscreen_button" />
								</style>

								<child>
									<object class="GtkImage">
										<property name="visible">True</property>
										<property name="can_focus">False</property>
										<property name="icon_name">view-fullscreen-symbolic</property>
										<property name="pixel_size">14</property>
									</object>
								</child>
							</object>
							<packing>
								<property name="expand">False</property>
								<property name="fill">True</property>
								<property name="position">2</property>
							  <property name="pack-type">end</property>
							</packing>
						</child>
		      </object>
		      <packing>
				    <property name="expand">False</property>
				    <property name="fill">True</property>
				    <property name="position">1</property>
			    </packing>
		    </child>
		  </object>
		  <packing>
		    <property name="expand">False</property>
		    <property name="fill">True</property>
		    <property name="position">0</property>
	    </packing>
	  </child>

	  <child>
		  <object class="GtkBox">
		    <property name="visible">True</property>
        <property name="can_focus">True</property>
		    <property name="orientation">vertical</property>
		    <property name="spacing">0</property>

		    <style>
          <class name="info_box" />
        </style>

		    <child>
		      <object class="GtkLabel" id="shader_title">
		        <property name="visible">True</property>
		        <property name="can_focus">False</property>
		        <property name="label">Hello title!</property>
		      </object>
		      <packing>
				    <property name="expand">False</property>
				    <property name="fill">True</property>
				    <property name="position">0</property>
			    </packing>
		    </child>

		    <child>
		      <object class="GtkLabel" id="shader_description">
		        <property name="visible">True</property>
		        <property name="can_focus">False</property>
		        <property name="label">Lorem ipsum dolor sit amed ...</property>
		      </object>
		      <packing>
				    <property name="expand">False</property>
				    <property name="fill">True</property>
				    <property name="position">1</property>
			    </packing>
		    </child>
		  </object>
		  <packing>
				<property name="expand">True</property>
				<property name="fill">True</property>
				<property name="position">1</property>
			</packing>
	  </child>
	</template>
</interface>
